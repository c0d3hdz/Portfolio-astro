---
import GITHUB from '../assets/github_dark.svg'
import CODE from '../assets/code.svg'
import HTML from '../assets/html5.svg'
import CSS from '../assets/css.svg'
import LinkInline from './LinkInline.astro'
const TAGS = {
    HTML: {
        name: 'HTML5',
        class: 'bg-amber-500/60 text-white',
        icon: HTML,
    },
    CSS: {
        name: 'CSS',
        class: 'bg-[#3159] text-white',
        icon: CSS,
    },
}
const PROJECTS = [
    {
        title: 'Aspirantes - CBTis 86',
        description:
            'Aplicaci贸n web para la gesti贸n de fichas de inscripci贸n de alumnos del CBTis 86, con la finalidad de agilizar el proceso de inscripci贸n de los alumnos',
        link: 'https://cbtis86.edu.mx/cbtis86.edu.mx/admision/Fichas_CBTis86/index.html',
        image: '/img/Projects/cbtisAdmin.webp',
        tags: [TAGS.HTML, TAGS.CSS],
    },
]
---

<section>
    <p class="mt-16 size-8 text-3xl font-semibold w-full text-start text-white gap-x-3 mb-6" id="Proyectos">
        <CODE class="w-8 h-8 inline-block" /> Proyectos
    </p>
    <div>
        <div class="flex flex-col gap-4">
            {
                PROJECTS.map(({ image, title, description, tags, link, github }) => (
                    <div class="flex flex-col md:grid grid-cols-2 gap-4">
                        <div class="flex justify-center items-center rounded-md border overflow-hidden border-blue-400 shadow shadow-blue-700/50">
                            <div class="w-full h-full overflow-hidden">
                                <img
                                    src={image}
                                    alt={title}
                                    class="w-full h-full object-cover opacity-80 hover:opacity-100 hover:scale-105 transition-all duration-300 ease-in-out"
                                />
                            </div>
                        </div>
                        <div>
                            <div class="felx flex-col justify-center items-start px-4 ">
                                <div class="flex gap-2 mb-2">
                                    {tags.map(tag => (
                                        <span
                                            class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold ${tag.class}`}
                                        >
                                            <tag.icon class="w-4 h-4 mr-1" />
                                            {tag.name}
                                        </span>
                                    ))}
                                </div>
                                <h2 class="text-white text-2xl font-semibold mb-1">{title}</h2>
                                <p class="text-gray-400">{description}</p>
                            </div>
                            <div class="flex space-x-4 gap-2 p-2 rounded-md mt-4">
                                {link && (
                                    <LinkInline href={link}>
                                        <span class="flex gap-1 items-center text-lg font-medium text-blue-500 dark:text-blue-200 dark:hover:text-blue-300 hover:text-blue-700 ">
                                            <CODE class="w-5 h-5" /> <p>Preview</p>
                                        </span>
                                    </LinkInline>
                                )}

                                {github && (
                                    <LinkInline href={github}>
                                        <span class="flex gap-1 items-center text-lg font-medium text-blue-500 dark:text-blue-200 dark:hover:text-blue-300 hover:text-blue-700">
                                            <GITHUB class="w-5 h-5" /> <p> Code</p>
                                        </span>
                                    </LinkInline>
                                )}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
